{
    "name": "sofa/eloquent-scopes",
    "description": "Handy scopes for the eloquent (Laravel) query builder.",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/jarektkaczyk/eloquent-scopes/issues",
        "source": "https://github.com/jarektkaczyk/eloquent-scopes"
    },
    "keywords": [
        "laravel",
        "eloquent",
        "database",
        "scopes"
    ],
    "authors": [
        {
            "name": "Jarek Tkaczyk",
            "email": "jarek@softonsofa.com",
            "homepage": "http://softonsofa.com/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4",
        "nesbot/carbon": "~1.20",
        "illuminate/database": "~5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.7.7",
        "mockery/mockery": "0.9.4"
    },
    "autoload": {
        "psr-4": {
            "Sofa\\EloquentScopes\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sofa\\EloquentScopes\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev"
}
